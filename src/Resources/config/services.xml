<?xml version="1.0" encoding="UTF-8" ?>

<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="reactjs_php.reactjs.class">QPautrat\ReactjsPhpBundle\ReactJS</parameter>
        <parameter key="reactjs_php.templating.helper.reactjs_helper.class">QPautrat\ReactjsPhpBundle\Templating\Helper\ReactJSHelper</parameter>
    </parameters>
    <services>
        <service id="reactjs_php.reactjs" class="%reactjs_php.reactjs.class%" />
        <service id="reactjs_php.templating.helper.reactjs_helper" class="%reactjs_php.templating.helper.reactjs_helper.class%">
            <tag name="templating.helper" alias="reactjs" />
            <argument type="service" id="reactjs_php.reactjs"/>
        </service>
    </services>
</container>